<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All tasks</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update task</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add task form -->
    <!-- form handling -->
    <form method="POST" id="update_task">
      <div class="new_task">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= task._id %>" />
          <input
            type="text"
            name="name"
            value="<%= task.name %>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="Task" class="text-light">Task</label>
          <input
            type="text"
            name="task"
            value="<%= task.task%>"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="role" class="text-light">Role</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="role" value="Admin" <%=
            task.role == 'Admin' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">Admin</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="role" value="User" <%=
            task.role == 'User' ? 'checked' : '' %> >
            <label for="radio-3" class="radio-label">User</label>
          </div>
        </div>

        <div class="form-group">
          <label for="role" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%=
            task.status == 'Active' ? 'checked' : '' %> >
            <label for="radio-4" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%=
            task.status == 'Inactive' ? 'checked' : '' %> >
            <label for="radio-5" class="radio-label">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->


<!-- The template includes a header, a main section that contains an update form, and a footer. It displays an update form with fields to modify the name, task, role, and status of a task. The form data is sent to the server using the POST method. -->
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-task" class="border-shadow">
        <span class="text-gradient">New task <i class="fas fa-task"></i></span>
      </a>

      <div>
        <a href="/register-user" class="btn-auth btn-primary">
          <span>Register User <i class="fas fa-task"></i></span>
        </a>
        <a href="/signin-user" class="btn-auth btn-secondary border-shadow">
          <span>Sign In <i class="fas fa-task"></i></span>
        </a>
        <button class="btn-auth btn-danger">Log Out</button>
      </div>
    </div>

    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Task</th>
            <th>Role</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%- include('include/_show') %>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
